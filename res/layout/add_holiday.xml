<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="1"
                  android:paddingLeft="30dp"
                  android:paddingRight="30dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add Holiday"
                android:id="@+id/holidayType"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventDescription"
                android:hint="Notes"
                android:maxLines="10"
                android:layout_marginBottom="20dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/holiday_dateDisplay"
                    android:layout_weight="1.00"
                    android:textSize="19dp"
                    android:layout_gravity="center_horizontal"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_action_go_to_today"
                    android:id="@+id/holiday_datePicker"
                    android:clickable="true"
                    android:padding="18dp"
                    android:layout_gravity="right"/>
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:hint="Location"
                android:layout_marginBottom="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photos"
                android:layout_gravity="center_horizontal"
                android:hint="Photos"
                android:layout_marginBottom="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gifts"
                android:layout_gravity="center_horizontal"
                android:hint="Gifts"
                android:layout_marginBottom="30dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:id="@+id/addHoliday"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:textColor="#ffffffff"
                android:onClick="addHoliday"/>
    </LinearLayout>
</ScrollView>